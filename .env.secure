# Server Configuration
PORT=3001
HOST=0.0.0.0
# Fly.io provides internal URL
INTERNAL_URL=http://localhost:3001

# Frontend Configuration
# Development: http://localhost:5173
# Production: https://plubot.com,https://www.plubot.com
ALLOWED_ORIGINS=http://localhost:5173,https://plubot.com,https://www.plubot.com
NODE_ENV=development

# Security - JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Security - API Key
API_KEY=your-api-key-change-this-in-production-min-32-chars

# Security - Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-change-this!!

# Redis Configuration
# Development: localhost:6379
# Production: Use Fly.io Redis or Upstash
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_KEY_PREFIX=whatsapp:

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MESSAGE_MAX=30
RATE_LIMIT_SESSION_CREATE_MAX=10

# Session Configuration
SESSION_MAX_RETRIES=5
SESSION_RETRY_DELAY=5000
SESSION_TIMEOUT=300000
SESSION_MAX_QR_RETRIES=3
SESSION_POOL_SIZE=100

# WhatsApp Configuration
WHATSAPP_VERSION=2.3000.1026363282
WHATSAPP_BROWSER_NAME=Chrome
WHATSAPP_BROWSER_VERSION=120.0.0.0

# Logging
LOG_LEVEL=info
LOG_DIR=logs
LOG_MAX_SIZE=5242880
LOG_MAX_FILES=5

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# WebSocket Configuration
WS_PING_TIMEOUT=60000
WS_PING_INTERVAL=25000
WS_MAX_CONNECTIONS=1000

# Storage
STORAGE_PATH=./auth-sessions
BACKUP_PATH=./backups
TEMP_PATH=./temp

# Features
ENABLE_WEBHOOKS=false
ENABLE_MESSAGE_QUEUE=true
ENABLE_AUTO_RECONNECT=true
ENABLE_SESSION_POOLING=true

# Performance
MAX_CONCURRENT_SESSIONS=100
MESSAGE_BATCH_SIZE=10
CLEANUP_INTERVAL=3600000

# Security Headers
CSP_ENABLED=true
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000
