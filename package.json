{
  "name": "plubot-whatsapp",
  "version": "2.0.0",
  "description": "WhatsApp microservice with Baileys",
  "main": "src/app.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node --expose-gc src/app.js",
    "start:secure": "node --expose-gc src/app.js",
    "dev": "NODE_ENV=development nodemon src/app.js",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .js",
    "lint:fix": "eslint src --ext .js --fix",
    "docker:build": "docker build -t plubot-whatsapp:latest .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f whatsapp-service"
  },
  "keywords": [
    "whatsapp",
    "bot",
    "plubot",
    "microservice",
    "node",
    "websocket"
  ],
  "author": "Plubot Team",
  "license": "ISC",
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@sentry/node": "^10.8.0",
    "@sentry/profiling-node": "^10.8.0",
    "@whiskeysockets/baileys": "^6.7.18",
    "axios": "^1.6.2",
    "bcryptjs": "^3.0.2",
    "bull": "^4.16.5",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-slow-down": "^3.0.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "ioredis": "^5.3.2",
    "isomorphic-dompurify": "^2.26.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "lru-cache": "^11.1.0",
    "node-cache": "^5.1.2",
    "opossum": "^9.0.0",
    "pino": "^8.19.0",
    "pino-pretty": "^10.3.1",
    "prom-client": "^15.1.3",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0",
    "redis": "^4.6.13",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.8.1",
    "uuid": "^9.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^54.1.1",
    "eslint-plugin-no-secrets": "^2.2.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-optimize-regex": "^1.2.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-security": "^2.1.0",
    "eslint-plugin-sonarjs": "^0.23.0",
    "eslint-plugin-unicorn": "^50.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/**/*.spec.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "transform": {},
    "extensionsToTreatAsEsm": [
      ".js"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "testTimeout": 10000
  }
}
